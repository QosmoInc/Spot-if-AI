{
    "manifest_version": 3,
    "name": "Spot-if-AI",
    "description": "Figure out if a song was generated by Suno or Udio!",
    "version": "0.2.0",
    "icons": {
        "512": "icons/icon512.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "resources": [
                "assets/*",
                "sonics_model.onnx",
                "ort-wasm*.wasm"
            ]
        }
    ],
    "action": {
        "default_title": "SpotifAI",
        "default_icon": "icons/icon512.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "content_scripts.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    }
}
